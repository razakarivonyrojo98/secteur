{% extends 'base.html.twig' %}

{% block title %}OrigineValide index{% endblock %}

{% block stylesheets %}

<style>
.entete{ 
    padding: 20px;
    margin-left: 15%; 
    padding-top: 40px;
}
.add{
    background-color: #2c5eaa;
    color: white;
    padding: 10px 20px;
    border-radius: 5px;
    text-decoration: none;
    font-size: 14px;
    text-decoration: none;
    height: 40px;
    margin-left: 13px;
}
.heading {
    display: flex;
    background-color: #232f3e;
    box-shadow: 0px 1px 2px #232f3e;

}
h1 {
    color: coral;
    font-weight: bold; 
    background: transparent;
    padding: 7px;
    
}
.outer-wrapper {
    margin: 10px;
    margin-left: 15px;
    margin-right: 10px;
    border-radius: 4px;
    box-shadow: 0px 0px 3px #9e9d9d;
    width: 80vw !important;
     justify-content: center;  /* Centrage horizontal */
    align-items: center;      /* Centrage vertical */
    
}
.table-wrapper {
    overflow-y: scroll;
    overflow-x: scroll;
    height: fit-content;
    margin: 15px;
    padding-bottom: 20px;    
}

table {   
    min-width: max-content;    
    border-collapse: separate;
    border-spacing: 0px;  
    font-size: 13px;
    text-align: center;
}


table th{
    position: sticky; 
    top: 0px;  
    background-color: #cbced1;
    color: rgb(12, 12, 11);  
    text-align: center;
    font-weight: normal;
 


} 
table th, table td {   
    padding: 15px;
    padding-top: 10px;
    padding-bottom: 10px;
    
}

table td {
    text-align: center; 
    padding-left: 20px;
    
}

@media (max-width: 850px) {
    .entete {
        margin-left: 0;
        margin-top: 20px;
    }
}
</style>

{% endblock %}

{% block body %}

    <div class="entete">
      
        <div class="row my-4 px-3 align-items-center justify-content-between">
            <div class="col-md-3">
                <label for="columnSelect" class="form-label mb-1">Choisir une colonne :</label>
                <select id="columnSelect" class="form-select">
                    <option value="">-- SÃ©lectionner --</option>
                    <option value="0">Annee</option>
                    <option value="1">Nummois</option>
                    <option value="2">Ensemble</option>
                    <option value="3">Prodlocal</option>
                    <option value="4">Prodsemimp</option>
                    <option value="5">Prodimport</option>
                </select>
            </div>
            <div class="col-md-3 d-none" id="searchColumnWrapper">
                <label for="searchInput" class="form-label mb-1">Rechercher :</label>
                <input type="text" id="searchInput" class="form-control" placeholder="Entrez une valeur...">
            </div>
                <div class="col-md-2 text-end">
                    <a class="add btn btn-primary" href="{{ path('app_origine_valide_new') }}">
                        <i class="bi bi-plus-circle"></i> Ajouter
                    </a>
                </div>
        </div>

   <div class="outer-wrapper">
    <div class="table-wrapper">
    <table class="table" id="sortableTable">
        <thead>
            <tr>
                <th>ANNEE</th>
                <th>NUMMOIS</th>
                <th>ENSEMBLE</th>
                <th>PRODLOCAL</th>
                <th>PRODSEMIMP</th>
                <th>PRODIMPORT</th>
                <th>ACTIONS</th>
            </tr>
        </thead>
        <tbody>
        {% for origine_valide in origine_valides %}
            <tr>
           
                <td>{{ origine_valide.annee }}</td>
                <td>{{ origine_valide.nummois }}</td>
                <td>{{ origine_valide.ensemble }}</td>
                <td>{{ origine_valide.prodlocal }}</td>
                <td>{{ origine_valide.prodsemimp }}</td>
                <td>{{ origine_valide.prodimport }}</td>
                <td>
                    {#<a href="{{ path('app_origine_valide_show', {'id': origine_valide.id}) }}">show</a>#}
                    <a href="{{ path('app_origine_valide_edit', {'id': origine_valide.id}) }}"
                    class="btn btn-sm btn-outline-primary"
                    title="Modifier">
                        <i class="bi bi-pencil"></i>
                    </a>

                    <form method="post"
                        action="{{ path('app_origine_valide_delete', {'id': origine_valide.id}) }}"
                        class="form-delete"
                        data-id="{{ origine_valide.id }}"
                        style="display:inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ origine_valide.id) }}">
                        <button type="submit" class="btn btn-sm btn-danger"> <i class="bi bi-trash"></i></button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        </div>
    </div>
    
    </div>

<script src="{{ asset('js/origine_valide.js') }}"></script>


    
{% endblock %}
