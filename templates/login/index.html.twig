{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/logins.css') }}">
{% endblock %}

{% block body %}
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <img src= "{{ asset('image/logo-bfm.png') }}" />
            </div>
            <div class="error-message">
                
            {% if error %}
                <div class="alert alert-danger">Matricule ou mot de passe incorrect</div>
            {% endif %}

            </div>
           

            <form method="post" action="{{ path('app_login') }}" class="login-form">
                <div class="form-group">
                    <label for="matricule">Matricule</label>
                    <input type="text" id="matricule" name="_username" value="{{ last_matricule }}" required autofocus>
                </div>

                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input type="password" id="password" name="_password" required>
                </div>

                <button type="submit" class="login-btn">Connexion</button>
            </form>
        </div>
    </div>
{% endblock %}
